<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN
" "http://mybatis.org/dtd/mybatis-3-mapper.dtd
" >
<mapper namespace="org.hecto.mapper.ReplyMapper">
	<insert id="insert">
		INSERT INTO tbl_reply(bno, reply, replyer) VALUES (#{bno}, #{reply}, #{replyer})
	</insert>
	
	<!-- 게시물 조회 -->
	<select id="read" resultType="org.hecto.domain.ReplyVO">
		SELECT * FROM tbl_reply WHERE rno = #{rno}
	</select>
	
	<!-- 게시물 삭제 -->
	<delete id="delete">
		DELETE FROM tbl_reply WHERE rno = #{rno}
	</delete>
	
	<!-- 게시물 수정 -->
   	<update id="update">
      update tbl_reply
      set reply = #{reply},
      replyer = #{replyer},
      updateDate = sysdate
      where rno = #{rno}
   	</update>
   	
   	<!-- 댓글 목록 -->
   	<select id="getListByBno" resultType="org.hecto.domain.ReplyVO">
		SELECT * FROM tbl_reply WHERE bno = #{bno}
	</select>
</mapper>

